<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.codebro.fortresssystem.persistence.mapper.UserMapper">

    <resultMap id="fullUserInfo" type="cn.codebro.fortresssystem.pojo.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="nickname" property="nickname"/>
        <result column="sex" property="sex"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="avatar" property="avatar"/>
        <collection property="roles" ofType="cn.codebro.fortresssystem.pojo.Role">
            <id property="id" column="role_id"/>
            <result property="name" column="role_name"/>
            <result property="identify" column="role_identify"/>
        </collection>
    </resultMap>

    <select id="selectFullUserInfo" resultMap="fullUserInfo">
        select fu.id,
               fu.username,
               fu.password,
               fu.nickname,
               fu.sex,
               fu.phone,
               fu.email,
               fu.post,
               fu.dept,
               fu.avatar,
               fr.id       as role_id,
               fr.name     as role_name,
               fr.identify as role_identify
        from F_USER fu
                 left join F_USER_ROLE fur on fu.id = fur.user_id
                 left join F_ROLE fr on fur.role_id = fr.id and fr.deleted = 0
        where fu.id = #{userId}
    </select>
</mapper>